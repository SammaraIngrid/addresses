<h2>Endereços</h2>

<%= link_to('Criar um novo endereço', new_address_path) %><p>

<table style="width:100%">
  <tr>
    <th>Cep</th>
    <th>Bairro</th>
    <th>Número</th>
    <th>Cidade</th>
    <th>Estado</th>
    <th>Complemento</th>
    <th>Ações</th>
  </tr>
  <% @addresses.each do |address| %>
    <tr>
      <td><%= address.zip_code %></td>
      <td><%= address.neighborhood %></td>
      <td><%= address.number %></td>
      <td><%= address.city %></td>
      <td><%= address.state %></td>
      <td><%= address.complement %></td>
      <td>
        <%= link_to('Excluir', address_path(address), data: { turbo_method: :delete, turbo_confirm: "Deseja excluir?" }) %>
        <%= link_to('Detalhes', address_path(address)) %>
      </td>
    </tr>
  <% end %>
</table>

<style>
table, th, td {
  border:1px solid black;
}
</style>
